<!doctype html>
<html>
    <head>
        <title>Quartz Management</title>
        <style type="text/css">
            body  
            {
                background: #1c1a1c; 
                color: #ffffff; 
                font-family: Verdana;
            }
            
            .jobGroupTable  
            {
                background: #2c2b2c; 
                border: 3px solid #6e7d8d; 
                border-radius: 5px; 
                box-shadow: 2px 2px 1px #CCCCCC;  
                font-size: 11px;
            }
            
            .jobGroupTitle
            {
                text-align: left; 
                font-size: 13px; 
                width: 100%;
                border: 1px solid #812c06;
                border-radius: 5px;
                background-color: #812c06;
            }
            
            .odd  
            {
                background: #343234; 
                color: #ffffff; 
            }
            
            .jobTitle 
            {
                font-size: 12px;
            }
        </style>

        <script src="Contents/jquery-1.7.1.min.js" type="text/javascript"></script>
        <script src="Contents/knockout-1.2.1.js" type="text/javascript"></script>
    </head>
<body>
<p>First name: <span data-bind="text: firstName"></span></p>
<p>Last name: <span data-bind="text: lastName"></span></p>
@foreach(var jobGroup in @Model.JobGroups)
{
    <div>
      <table border="0" cellspacing="0" cellpadding="5" class="jobGroupTable">
      <tr><th colspan="4"><div class="jobGroupTitle">Job Group: @jobGroup.GroupName</div></th></tr>
          <tr><th class="jobTitle">Job Name</th><th class="jobTitle">Description</th><th>Status</th><th></th></tr>
        @foreach (var jobModel in jobGroup.Jobs)
        { 
            <tr>
              <td>@jobModel.JobName</td>
              <td>@jobModel.Description</td>
              <td>status</td>
              <td><ul>
              @foreach (var jobTrigger in jobModel.TriggersForJob)
              { 
                  <li>@jobTrigger.TriggerName</li>
              }
              </ul>
              </td>
              <td><a href="/FireJob/@jobModel.JobGroup/@jobModel.JobName">Fire Job</a></td>
            </tr>        
        }            
      </table>    
    </div>
}

        <script type="text/javascript">
            $(document).ready(function () { $("tr:odd").addClass("odd"); });
        </script>
                <script type="text/javascript">
                    var viewModel = {
                        firstName: "Bert",
                        lastName: "Bertington"
                    };

                    // Activates knockout.js
                    ko.applyBindings(viewModel);
        </script>
   </body>
</html>